<div class="row mt-5">
        <div class="col-md-6 m-auto">
          <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
            <p style="color: red; background-color: lightcoral;"><% include ./messages %></p>

            <form action="/users/login" method="POST">
              <div class="form-group">
                <label >Username:</label>
                <input
                  id="username"
                  name="username"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="password">Password:</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                />
              </div>
              <button type="submit" style="background-color: #5bc0de; size: 16px;" class="btn btn-primary btn-block">Login</button>
            </form>
            <p class="lead mt-4">
              No Account? <a href="/users/register">Register</a>
            </p>
          </div>
        </div>
      </div>