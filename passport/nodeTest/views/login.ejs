<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Đăng nhập</h1>
      <p style="color: red;"><% include ./messages %></p>

      <form action="/users/login" method="POST">
        <div class="form-group">
          <label >Email:</label>
          <input
            id="username"
            name="username"
            class="form-control"
          />
        </div>
        <div class="form-group">
          <label for="password">Mật khẩu:</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
          />
        </div>
        <button type="submit" style="background-color: #5bc0de; size: 16px;" class="btn btn-primary btn-block">Đăng nhập</button>
      </form>
      <p class="lead mt-4">
        <a href="/users/register">Đăng kí</a><br>
         <a href="/users/getAcount">Quên mật khẩu</a>
      </p>
    </div>
  </div>
</div>