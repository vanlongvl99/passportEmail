<div class="row mt-5">
        <div class="col-md-6 m-auto">
          <div class="card card-body">  
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Xác thực Email</h1>
            <p style="color: red;"><% include ./messages %></p>
            <form action="/users/getAcount/code" method="POST">
              <div class="form-group">
                <label >Nhập mã bảo mật:</label>
                <input
                  name="codeConfirm"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="password">Mật khẩu mới:</label>
                <input
                  type="password"
                  name="newPassword"
                  class="form-control"
                />
              </div>
              <button type="submit" style="background-color: #5bc0de; size: 16px;" class="btn btn-primary btn-block">Xác nhận</button>
            </form>
            <p class="lead mt-4">
            <p class="lead mt-4">Quay lại trang chủ <a href="/">Trang chủ</a>
            </p>
          </div>
        </div>
      </div>